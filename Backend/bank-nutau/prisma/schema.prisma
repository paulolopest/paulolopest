generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id
  name        String
  last_name   String
  username    String        @unique
  email       String        @unique
  password    String
  cpf         String        @unique
  created_at  DateTime      @default(now())
  Account     Account[]
  Credit_Card Credit_Card[]
}

model Account {
  user_id String @id @unique
  credit  Int    @default(1000)
  debit   Int    @default(1000)

  User User @relation(fields: [user_id], references: [id])

  sends           Transference[]    @relation("sender")
  receives        Transference[]    @relation("receiver")
  Account_history Account_history[]
}

enum Status {
  EXIT
  ENTRANCE
  TRANSFERENCE
}

enum Type {
  CREDIT
  DEBIT
}

model Account_history {
  id         String   @id
  user_id    String
  amount     Int
  type       Type
  status     Status
  created_at DateTime @default(now())

  Account Account @relation(fields: [user_id], references: [user_id])
}

model Transference {
  id          String   @id
  sender_id   String
  receiver_id String
  amount      Int
  created_at  DateTime @default(now())

  sender   Account @relation(name: "sender", fields: [sender_id], references: [user_id])
  receiver Account @relation(name: "receiver", fields: [receiver_id], references: [user_id])
}

model Credit_Card {
  id            String   @id
  user_id       String   @unique
  name          String   @default("Nuta√∫ Card")
  card_number   String   @unique
  cvv           Int
  card_owner    String
  validate_date String
  created_at    DateTime @default(now())

  User User @relation(fields: [user_id], references: [id])
}
